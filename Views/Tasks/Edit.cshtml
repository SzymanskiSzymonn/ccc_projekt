@model ccc_projekt.Models.Task

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-light">Edit</h1>

<h4 class="text-light">Task</h4>
<hr class="text-light" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="bg-dark p-4 rounded shadow">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            @if (Context.Session.GetString("Role") == "Project Manager" || Context.Session.GetString("Role") == "Admin")
            {
                <div class="form-group mb-3">
                    <label asp-for="title" class="form-label text-light"></label>
                    <input asp-for="title" class="form-control bg-dark text-light border-secondary" />
                    <span asp-validation-for="title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label text-light"></label>
                    <textarea rows="5" cols="80" asp-for="Description" class="form-control bg-dark text-light border-secondary"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AssignedEmail" class="form-label text-light"></label>
                    <select asp-for="AssignedEmail" class="form-control bg-dark text-light border-secondary" asp-items="ViewBag.Users">
                        <option value="">-- Select a User --</option>
                    </select>
                    <span asp-validation-for="AssignedEmail" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AssignedProject" class="form-label text-light"></label>
                    <select asp-for="AssignedProject" class="form-control bg-dark text-light border-secondary" asp-items="ViewBag.Projects">
                        <option value="">-- Select a Project --</option>
                    </select>
                    <span asp-validation-for="AssignedProject" class="text-danger"></span>
                </div>
            }

            <div class="form-group mb-3">
                <label asp-for="status" class="form-label text-light"></label>
                <input asp-for="status" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success w-100" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
