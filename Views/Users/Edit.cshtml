@model ccc_projekt.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-light">Edit</h1>

<h4 class="text-light">User</h4>
<hr class="text-light" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="bg-dark p-4 rounded shadow">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label text-light"></label>
                <input asp-for="Username" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="hidden" asp-for="Password" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label text-light"></label>
                <input asp-for="Email" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Role" class="form-label text-light"></label>
                <select asp-for="Role" class="form-control bg-dark text-light border-secondary" asp-items="ViewBag.Roles"></select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success w-100" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
