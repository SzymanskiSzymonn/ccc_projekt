<style>
    .custom-button {
        border: 2px solid #00bcd4; /* Border color */
        color: #00bcd4; /* Text color */
        background-color: transparent; /* Transparent background */
        transition: all 0.3s ease; /* Smooth animation */
    }

        .custom-button:hover {
            background-color: #00bcd4; /* Background color on hover */
            color: #fff; /* Text color on hover */
            border-color: #00bcd4; /* Border color on hover */
        }

    .clickable-text {
        cursor: pointer; /* Changes cursor to indicate interactivity */
        transition: color 0.3s ease;
    }

        .clickable-text:hover {
            color: #03a9f4; /* Change color to blue on hover */
            text-decoration: underline; /* Underline on hover */
        }
</style>
